    <link rel="stylesheet" href="/css/skeleton.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="icon" href="/assets/$.png"> -->

    <% include ../partials/head.ejs %>

    <% include ../partials/nav.ejs %>
  </head>
  <body>
    <nav>
      <div class="row nav">
        <a href="/products"><h1 id="store" class="six columns">The Online Drug Store</h1></a>
        <span class="three columns">&nbsp;</span>
        <a href="/products/new"><button type="button" name="button" class="new-product three columns">New Product</button></a>
        <span class="one column">&nbsp;</span>
      </div>
    </nav>
    <div class="container">
      <h2>Check Our range of Medicinal Products</h2>
      <div class="products">
        <% products.forEach( function (product) { %>
          <div class="card">
            <h5> <%= product.name  %></h5>
            <a href="/products/<%=product.id%>">
              <img src="<%= product.img %>" alt="An image of <%= product.name %>" /></a>
              <h6>Price: $<%=product.price %></h6>
          </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
